<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Boora_TCC_2019.TELAS.TelaSobre">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="10">
            
            <Label Text="Mais Detalhes" TextColor="Black" x:Name="Lbl_MaisDetalhes" HorizontalTextAlignment="Center">
                <Label.GestureRecognizers>
                    
                    <TapGestureRecognizer  Tapped="MaisDetalhesAction" />

                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="Lbl_MaisDetalhes2" TextColor="Black" HorizontalTextAlignment="Center" IsVisible="False"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>