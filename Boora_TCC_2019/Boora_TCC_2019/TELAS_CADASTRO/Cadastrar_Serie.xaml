<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Boora_TCC_2019.TELAS.Cadastrar_Serie">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="White">

                <StackLayout Padding="0" Margin="15">
                    <Label Text="CADASTRAR SÉRIE" Style="{StaticResource LblTitulo}"/>
                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Horizontal" >
                            <Label Text="Identificação do Aluno: " FontAttributes="Bold"/>
                            <Label HorizontalOptions="FillAndExpand" x:Name="Txt_Id_Do_Aluno"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Nome da Série: "/>
                            <Entry Placeholder="Nome Série" PlaceholderColor="Black" x:Name="Txt_nome_Serie" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>

                        <Entry Placeholder="Descrição" PlaceholderColor="Black" x:Name="Txt_Descricao_Serie"/>
                        <StackLayout Orientation="Horizontal" >
                            <Label FontSize="18" TextColor="Black" Text="Data Inicial:" HorizontalOptions="FillAndExpand"/>

                            <Label Text="Data Final:" FontSize="18" TextColor="Black" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" >
                            <Label HorizontalOptions="FillAndExpand" x:Name="Lbl_data_Inicial" FontSize="18" TextColor="Black"/>

                            <DatePicker  FontSize="18" HorizontalOptions="FillAndExpand" TextColor="Black" Format="dd/MM/yyyy" x:Name="Txt_Data_Fim" MinimumDate="01/01/2019" DateSelected="DataSelecionada"/>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal" >
                            <Entry HorizontalOptions="FillAndExpand"  PlaceholderColor="Black" Placeholder="Tempo Execução" x:Name="txt_tempo_execucao"/>
                        </StackLayout>
                    </StackLayout>

                    <Label Text="Data final não selecionada" x:Name="dataFinalIsVisible"   IsVisible="False" Style="{StaticResource LblAvisos}"/>
                    <Button Image="cadastro_serie.png" Text="Cadastrar Série"  Clicked="Btn_Cadastrar_Serie" HorizontalOptions="Center" />

                </StackLayout>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>