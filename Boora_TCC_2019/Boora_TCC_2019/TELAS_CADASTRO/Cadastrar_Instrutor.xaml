<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Boora_TCC_2019.TELAS.Cadastrar_Instrutor">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="0" Margin="15" >
                <Label Text="CADASTRAR INSTRUTOR" Style="{StaticResource LblTitulo}"/>

                <Entry Placeholder="Nome" x:Name="txt_NOME" PlaceholderColor="Black"/>
                <Entry Placeholder="Email" x:Name="txt_EMAIL" PlaceholderColor="Black"/>
                <Entry Placeholder="Senha" x:Name="txt_SENHA" PlaceholderColor="Black"/>
                <Entry Placeholder="Idade" x:Name="txt_IDADE" PlaceholderColor="Black"/>
                <Entry Placeholder="Formacão Academica" x:Name="txt_FORMACAO" PlaceholderColor="Black"/>
                   
                <Button Text="Cadastrar Instrutor" BackgroundColor="Orange" Clicked="Cadastrar_InstrutorAsync" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>