<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Boora_TCC_2019.TELAS.Cadastrar_Exercicio">
    <ContentPage.Content>
        <ScrollView>

            <StackLayout>

                <StackLayout  Padding="0" Margin="15">
                    
                    <Label Text="CADASTRAR EXERCÍCIO" Style="{StaticResource LblTitulo}" />
                    <Entry x:Name="txtNOME" Placeholder="Nome"  PlaceholderColor="Black" />
                    <Entry x:Name="txtDESCRICAO" Placeholder="Descrição" PlaceholderColor="Black" />
                    <Editor x:Name="txtOBJETIVO" Placeholder="Objetivo" HeightRequest="150" PlaceholderColor="Black" />
                    <Image x:Name="imgChoosed" HeightRequest="150"/>
                    
                    <StackLayout  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        
                        <Button x:Name="btnPick" WidthRequest="200" Text="Buscar imagem" Clicked="Btn_Buscar"/>
                        <Button x:Name="btnUpload" WidthRequest="200" Text="Cadastrar" Clicked="Btn_Upload" />

                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>