<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Boora_TCC_2019.TELAS.Cadastrar_Exercicio">
    <ContentPage.Content>
        <ScrollView>

            <StackLayout BackgroundColor="LightYellow">
                <StackLayout HorizontalOptions="Center" VerticalOptions="Start">

                    <Label Margin="0,30,0,10" Text="Cadastrar Exercicio" FontAttributes="Bold" FontSize="16" TextColor="OrangeRed" HorizontalTextAlignment="Center" />

                    <Image x:Name="imgChoosed" HeightRequest="150"/>

                    <Entry x:Name="txtNOME" Placeholder="NOME" HorizontalTextAlignment="Center" PlaceholderColor="OrangeRed" BackgroundColor="LightYellow"/>
                    <Entry x:Name="txtDESCRICAO" Placeholder="DESCRICAO" HorizontalTextAlignment="Center" PlaceholderColor="OrangeRed" BackgroundColor="LightYellow"/>
                    <Editor x:Name="txtOBJETIVO" Placeholder="OBJETIVO" HeightRequest="150" PlaceholderColor="OrangeRed" BackgroundColor="LightYellow"/>
                    
                    <StackLayout  HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        
                        <Button x:Name="btnPick" WidthRequest="200" Text="BUSCAR IMAGEM" Clicked="Btn_Buscar" BackgroundColor="LightYellow" TextColor="OrangeRed"/>
                        <Button x:Name="btnUpload" WidthRequest="200" Text="CADASTRAR" Clicked="Btn_Upload" BackgroundColor="LightYellow"  TextColor="OrangeRed"/>

                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>